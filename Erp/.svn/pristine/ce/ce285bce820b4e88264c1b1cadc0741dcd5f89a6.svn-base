function batch_adjust() {
 
   $.ajaxFileUpload({
	   url:'batch_adjust.php',
	   secureuri:false,
	   fileElementId:'fileToUpload',
	   dataType: 'json',
	   success: function (data){   
		
		  if(data.message == "")
		  {
			  batch_goods_list = data.data;
			  for(var j = 0; j < batch_goods_list.length; j++) {
			     added_goods_list.push(batch_goods_list[j]);
			  }
			        
			  redraw_table();
			
		  }else{
