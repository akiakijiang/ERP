        provider_name = providers[i][2];
        if(providers[i][1].toUpperCase().indexOf(provider.toUpperCase()) != -1 || provider_name.toUpperCase().indexOf(provider.toUpperCase()) != -1)
        html += '<li gid="' + providers[i][0] + '">' + provider_name + '</li>'
