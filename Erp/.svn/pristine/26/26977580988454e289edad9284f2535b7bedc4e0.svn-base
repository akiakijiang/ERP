			{if $goods.top_cat_id == 1}
			<th>移动版本库存数</th>
			<th>非移动版本库存数</th>
			{/if}
			<th>总库存数</th>
			<th>商品状态</th>
			<th>详细状态</th>
    </tr>
      {/if}
			{foreach from=$goods.style_list item=style name=styles}
			<tr {if $smarty.foreach.goodsList.iteration%2==0}style="background:#eee"{/if}>
				 {if $smarty.foreach.styles.first}
				<td rowspan="{$smarty.foreach.styles.total}"><a href="http://www.ouku.com/goods{$goods.goods_id}" target="_blank">{$goods.goods_name}</a></td>
				 {/if}
        <td>{$style.color}</td>				 
        <td>{$style.style_price|price_format}</td>				 
