<script type="text/javascript">

function subEditGoods(){
	var falg_weight = true;
	var goods_weight = $.trim($('#data_size').val());
	var reg = /^[1-9][0-9]*$/;
	if (goods_weight && goods_weight != 0) {
		if (goods_weight.match(reg)) {
			falg_weight = true;
		} else {
			falg_weight = false;
		}
		if (!falg_weight) {
			alert("大小单位为mb，请输入整数");
			return;
		}
	}
	var state=$('#name_state').val();
	if(state==1)
	{
		$('#form1').submit();
	}else
	{
		alert('出现错误,请与ERP组联系,打bug报告,谢谢---');
	}
}


function checkName(){
	var dataName=$.trim($('#data_name').val());
	if(dataName==''){
		$('#name_state').val('0');
		$('#data_name_info').html('您输入的值为空');
	}
	else {
		$('#name_state').val('1');
		$('#data_name_info').html('正确');
	}
}

