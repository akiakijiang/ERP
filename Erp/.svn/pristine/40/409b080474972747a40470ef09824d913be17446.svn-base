@charset "utf-8";
/* CSS Document */
/*跳出层样式*/
.itemDiv{
width:500px;
border:1px solid #000;
position:absolute; 
z-index:1000;
background:#fff;
padding:10px;
border-radius: 10px;
}
.itemDiv caption{
font-size:14px;
height:30px;
line-height:30xp;
}
.itemDiv table{
border:1px solid #b2b2b2;
border-collapse:collapse;
width:70%;
}
.itemDiv td{
height:25px;
line-height:25px;
border:1px solid #b2b2b2;
}
.itemDiv th{
height:25px;
line-height:25px;
border:1px solid #b2b2b2;
}
.itemDiv h2{
font-size:14px;
margin:10px 0;
text-align:center;
}
.itemDiv h3{
font-size:12px;
margin:10px 0;
text-align:center;
}
.itemDiv p{
clear:both;
padding-left:170px;
}
.itemDiv input{
width:300px;
float:left;
}
.itemDiv select{
float:left;
width:300px;
}
.itemDiv ul{
list-style:none;
overflow:hidden;
_height:1%;
}

.itemDiv li{
padding:10px 0;
clear:both;
}
.itemDiv li strong{
font-weight:normal;
float:left;
width:100px;
text-align:right;
}
#oDiv{
background:#eee;width:100%;position:absolute;top:0;left:0;z-index:100;opacity:0.6;filter:alpha(opacity=60);
}
.itemDiv textarea{
float:left;
width:300px;
height:70px;
}
.aleft{
float:left;
}
.aleft input{
width:auto;
height:auto;
margin-top:-3px;
}
.itemDiv a{
color:#000;
text-decoration:none;
}
