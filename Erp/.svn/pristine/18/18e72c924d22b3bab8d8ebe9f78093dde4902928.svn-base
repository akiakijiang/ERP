<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
	   "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" lang="en_US" xml:lang="en_US">
 <head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>亚马逊订单</title>
<link href="../styles/default.css" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="../misc/jquery.js"></script>
<script type="text/javascript" src="../js/style/zapatec/utils/zapatec.js"></script>
<script type="text/javascript" src="../js/style/zapatec/zpcal/src/calendar.js"></script>
<script type="text/javascript" src="../js/style/zapatec/zpcal/lang/calendar-en.js"></script>
<link rel="stylesheet" href="../js/style/zapatec/zpcal/themes/winter.css" />
<script type="text/javascript">
	// <![CDATA[
							
	var WEB_ROOT = '{$WEB_ROOT}';
	
	{literal}
	function searchCounty(city,state_or_region,amazon_order_id) {
		$.ajax({
			type: 'POST', //请求类型
			url: 'amazon_order_list.php?request=ajax&act=search_county',//请求发送地址
			data: 'city=' + city +"&state_or_region="+state_or_region,//传送数据
			dataType: 'json',//数据类型
			async: false, 	//请求同步执行
			success:function(data){
				if(data.error){
					alert(data.error);
					return;
				}
				var tdc = "<td aoi="+amazon_order_id+"> <select name=\"county\"><option value=\"0\">-请选择-</option>";
				for(j = 0; j<data.length;j++){
					tdc += "<option value="+data[j].region_id+">"+data[j].region_name+"</option>";
				}
				tdc += "</select><a href=\"javascript:void(0);\" onclick=\"addCounty(this,"+amazon_order_id+")\">确认</a></td> ";
				$('#'+amazon_order_id).replaceWith(tdc);
			},
			error: function() { 
				alert("区信息查询异常");
			}
		});
	}
	function addCounty(obj,amazon_order_id){
		var select = $(obj).prev().find("option:selected").val();
		if(select == '0'){
			alert("请选择添加的区");
		}else 
		location.href='amazon_order_list.php?region_id=' + select+"&amazon_order_id="+amazon_order_id;
		
	}
	{/literal}
	// ]]>
	</script>
	
</head>
<body>
	<fieldset style="-moz-border-radius: 6px; padding: 10px;">
		<legend>
			<span style="font-weight: bold; font-size: 18px; color: #2A1FFF;">&nbsp;亚马逊订单&nbsp;</span>
		</legend>
		<div style="clear: both;">
			<font color="red">
	                         注意：<br />
	          1.亚马逊订单号、用户名、订单状态三个条件必须至少输入一个<br/>
	          2.不能查全部状态为正常的订单<br />
	          3.状态分为WARN和ERROR,ERROR状态的请直接手工录单; WARN状态时区信息为空的，店长可选择区信息，其它可联系ERP。<br />	          
       		  4.备注信息会列出同步失败原因,未找到匹配商品为商家编码错误,手工录单;未找到地址为地址信息错误,联系ERP。<br />
            </font>
            <br />
			<form method="post" id="conditionForm">
				<table>
					<tr>
						<td>亚马逊订单号：<input type="text" name="amazon_order_id" id="amazon_order_id" value="{$amazon_order_id}" /></td>
						<td>用户名：<input type="text" name="buyer_name" id="buyer_name" value="{$buyer_name}" /></td>
						<td>开始时间:<input type="text" id="start" name="startDate"  size="10" /><input type="button" id="startTrigger" value="日历" style="border:#960 1px solid;" /></td>
						<td>结束时间:<input type="text" id="end" name="endDate"  size="10" /><input type="button" id="endTrigger" value="日历" style="border:#960 1px solid;" /></td>
						<td>订单状态: 
							<select name="transfer_status" id="transfer_status"> 
								{html_options options=$transfer_status_list selected=$transfer_status }
							</select>
						</td>
						<td>
							<input type="hidden" name="act" id="act" value="search" />
						 	<input	type="button" value="搜索" onclick="checkCondition()" />
						</td>
					</tr>
				</table>
			</form>
		</div>
		<br />
		<div style="clear: both;">
			<h3 style="color: #09F;">亚马逊订单</h3>
			<table class="bWindow" style="margin-top: 10px;"
				id="goods_list_table">
				<tr>
					<th width="30">No.</th>
					<!-- <th>商店名</th> -->
					<th>亚马逊订单号</th>
					<th>下单时间</th>
					<!-- <th>付款时间</th> -->
					<th>状态</th>
					<th>备注</th>
					<th>省</th>
					<th>市</th>
					<th>区</th>
					<!-- <th>是否外包发货</th> -->
					<th>操作建议</th>
				</tr>
				<!--  {if $order_list != null} -->
				<!-- {foreach from=$order_list item=order name="amazonOrderList"} -->
				<tr align="center" class="{cycle values='odd,even'}" id="">
					<td>{$smarty.foreach.amazonOrderList.iteration}</td>
					<!-- <td>{$order.title}</td> -->
					<td>{$order.amazon_order_id}</td>
					<td>{$order.purchase_date}</td>
					<!-- <td>{$order.pay_date}</td> -->
					<td>{$order.transfer_status}</td>
					<td>{$order.transfer_note}</td>
					<td>{$order.state_or_region}</td>
					<td>{$order.city}</td>
					{if !$order.county && ($order.purchase_date)> $valide_date && $order.transfer_status=='WARN'}
					 <td id="{$order.amazon_order_id}" >
						 <input type="hidden" id="state" value="{$order.state_or_region}" />
						<input type="hidden" id="city" value="{$order.city}"/>
						<input type="button" value="查询" onclick="searchCounty('{$order.city}','{$order.state_or_region}','{$order.amazon_order_id}');"/> 
					</td>
					{else}
					<td>{$order.county}</td>
					{/if}
					
					<!-- <td>{$order.ship_type}</td> -->
					<td>{$order.advice}</td>
				</tr>
				<!-- {/foreach} -->
				<!-- {else} -->
				<tr>
					<td colspan="10" align="center">没有数据</td>
				</tr>
				<!--  {/if} -->
			</table>
			<br />
		</div>
	</fieldset>
	<script type="text/javascript">
	{literal}
	function checkCondition(){
		var start = $('#start').val();
		var end = $('#end').val();
	/*	if($('#amazon_order_id').val() == '' && $('#buyer_name').val() == '' && $('#transfer_status').val() == 'NORMAL'){
			alert('不能查全部状态为正常的订单');
			return false;
		}else */
		if( $('#amazon_order_id').val() == '' && $('#buyer_name').val() == '' && $('#transfer_status').val() == 'ALL' ){
			alert('三个条件至少输入一个');
			return false;
		}else if(start > end){
			alert('开始时间不能晚于结束时间');
			return false;
		}else{
			$('#conditionForm').submit();
		}
	}
	Zapatec.Calendar.setup({
		weekNumbers       : false,
		electric          : false,
		inputField        : "start",
		button            : "startTrigger",
		ifFormat          : "%Y-%m-%d",
		daFormat          : "%Y-%m-%d"
	});
	Zapatec.Calendar.setup({
		weekNumbers       : false,
		electric          : false,
		inputField        : "end",
		button            : "endTrigger",
		ifFormat          : "%Y-%m-%d",
		daFormat          : "%Y-%m-%d"
	});
	{/literal}
	</script>
</body>
</html>