.tab-title {
	width: 400px;
	border-bottom: 1px solid black;
	margin-bottom: 15px;
}

.tab-title div{
	display: inline-block;
	padding-left: 20px;
}

.tab-title a{
 text-decoration: none;
 font-size: 20px;
 color: black;
}
.tab-title a:active{
	color: red;
}
.somegoods{
	width: 900px;
}
ul.list{
	list-style: none;
	padding-left: 6px;
}

ul.list li{
	display: inline-block;
	margin: 1px;
}
ul.list li p{
	padding: 4px;
	margin: 0px;
	display: inline-block;
	background-color: rgba(220,220,220,0.4);
	border: 1px solid rgba(220,220,220,0.8);
	/*box-shadow: 3px 2px 3px #999;*/

}
ul.list li span{
padding:0px 5px 1px 4px ;
text-align: center;
background-color: rgba(220,220,220,1);
border: none;
cursor:pointer;
margin-left: 4px;
}
.nes{
	color: red;
}
.unnes{
	color: white;
}
