      <script type="text/javascript">
      // <![CDATA[
      var $order_id = {$order_header->order_id_};
      var $party_id = {$order_header->party_id_};
      //{literal}
      
      $(document).ready(function(){
        //定义正则表达式
        var regNumber = new RegExp("^[0-9]*$");
        //var regMobile = new RegExp("^((13[0-9]{9})|(18[0-9]{9})|(15[89][0-9]{8}))$");
        var regMobile = new RegExp("^((1[0-9]{10}))$");
        var regZipcode = new RegExp("^[0-9]{6}$");
        // var regPhone = /^[+]{0,1}(\d){1,3}[ ]?([-]?((\d)|[ ]){1,12})+$/;
        /*
        全局jquery函数绑定，主要针对HTML初始化的时候不存在的元素的函数绑定，例如ajax动态生成的商品列表中商品的修改以及删除操作，也用于添加商品新生成的商品的修改以及删除操作。
        */
         $("#goods").delegate(".goodsDeleteBtn","click",function(){//删除商品，需要改进
                var that = $(this);
                var data = 'content_type=goods_list&action_type=delete&order_goods_id='+that.parent().parent().find(".order_goods_id").text()+'&order_id='+$order_id;
                          if(confirm('确定删除该商品吗？')){
                              $.ajax({
                                type:'get',
                                dataType:'json',
                                url:'order/sales_order_edit_ajax.php',
                                data:data,
                                beforeSend:function(){
                                  that.text("正在努力删除");
                                },
                                success:function(data){
                                  that.text("删除");
                                  if(data.error_info_.err_no == 0){
                                    that.parent().parent().hide();
                                    alert("删除成功");
                                  }else{
                                    alert(data.error_info_.message);
                                  }

                                },
                                error:function(){
                                  that.text("删除");
                                  alert("AJAX加载失败");
                                }
                              });
                              
                          }
         });

        $("#bestExp").delegate(".changeTrackBtn","click",function(){//最优快递修改
          var that = $(this);
          var data="content_type=express&action_type=update&order_id="+$order_id+"&shipping_id="+$(this).next().text();
          $.ajax({
            type:'get',
            dataType:'json',
            url:'order/sales_order_edit_ajax.php',
            data:data,
            beforeSend:function(){
              that.attr("disabled",true).val("正在努力修改");
            },
            success:function(data){
              that.attr("disabled",false).val("修改快递");
              if(data.error_info_.err_no == 0){
                alert("快递修改成功");
              }else{
                alert(data.error_info_.message);
              }
            },
            error:function(){
              that.attr("disabled",false).val("修改快递");
              alert("AJAX加载失败");
            }
          });
        });


        $(".addGoodsBtn").click(function(){//增加商品
                var data="order_id="+$order_id+"&goods_id="+$("#searchGoodsId").val()+"&style_id="+$("#searchStyleList").val()+"&goods_price="+$("#searchGoodsPrice").val()+"&goods_number="+$("#searchGoodsNumber").val()+"&content_type=goods_list&action_type=insert";
                var that=$(this);
                if($("#searchGoodsNumber").val() > 0 && $("#searchGoodsPrice").val() >=0 && $("#searchName").val()!=''){
                  $.ajax({
                    type:'get',
                    dataType:'json',
                    url:'order/sales_order_edit_ajax.php',
                    data:data,
                    beforeSend:function(){
                      that.text("正在努力添加").animate({"width":"90px"},"fast");
                    },
                    success:function(data){
                      that.text("添加").animate({"width":"32px"},"fast");
                      if(data.error_info_.err_no == 0){
                        alert("添加商品成功");
                        var searchaddedGoods = "<tr class='goodsList' id='"+data.goods_id_+"'><td class='order_goods_id' style='display:none'>"+data.rec_id_+"</td><td>"+data.goods_name_+"</td><td><select class='styleList'><option value='"+data.style_id_+"'>"+data.style_name_+"</option><optgroup></optgroup></select></td><td>" +data.qoh_in_facility_+ "</td><td>" +data.atp_in_facility_+ "</td><td>";
                        var searchInvlen = data.shipping_invoices_.length;
                        if(searchInvlen > 0){
                          for(var i=0;i<searchInvlen;i++){
                              searchaddedGoods = searchaddedGoods + data.shipping_invoices_[i]+"</br>";
                          } 
                        }
                        searchaddedGoods = searchaddedGoods + "</td><td><input class='goods_price' style='width:80px' readonly='readonly' type='text' value='" + data.p_goods_price_+ "'></td><td><input class='goods_number' style='width:60px' readonly='readonly' type='text' value='" + data.p_goods_number_ + "'></td><td>" + data.reserve_status_ + "</td><td>" +data.total_price_+ "</td><td><p class='goodsEditBtn'>修改</p><p class='goodsDeleteBtn'>删除</p></td></tr>";
                       $("#goods table").append(searchaddedGoods);
                      }else{
                        alert(data.error_info_.message);
                        $("#searchGoodsPrice").val("");
                        $("#searchGoodsNumber").val("");
                      }
                    },
                    error:function(){
                      that.text("添加").animate({"width":"32px"},"fast");
                      alert("AJAX加载失败");
                      $("#searchGoodsPrice").val("");
                      $("#searchGoodsNumber").val("");
                    }
                  });
                }else{
                  that.text("添加");
                  alert("商品名不能为空，商品单价不能为负，商品数量必须大于0");
                }
        });

        $("#actList").delegate("span","click",function(){
              var left = $(this).position().left - 300;
              var action_id = $(this).attr("id");
              $(".noteText").val("");
              $("#datepicker").val("");
              $("#actListTab").show().attr("class",action_id).animate({"left":left},"fast"); 
        });

        $(".subActBtn").click(function(){//提交头部操作内容
             header_action_ajax($(this),$(this).parent().attr("class"),0);
        });
        
        // 头部提交前检查
        function check_header_sub(order_action_id) {
        	 // 确认订单
        	 if(order_action_id == 'order_confirm') {
        		 // 判断退款
    	       	 if(! $('#refund_status_').val()) {
    	       		 if(!confirm('该订单发起退款申请?\n1、强制确认请点 确认\n2否则请点 取消')) {
    	       			 return false;
    	       		 }
    	       	 }
    	    	 // 判断可预订量
    	    	 if($('#atp_error_').val()) {
    	    		 if(!confirm($('#atp_error_info_').val())) {
    	    			 return false;
    	    		 }
    	    	 }
        	 }
	    	 return true;
        }
        
        function header_action_ajax(that,order_action_id) {
        	 var is_shipping_note = 0;   	 
        	 if(document.getElementById("isShippingNote").checked) {
        		 is_shipping_note = 1;
        	 }
        	 
        	 if(!check_header_sub(order_action_id)) {
        		 return false;
        	 }
        	 
             var data="order_action_id="+order_action_id+"&content_type=order_header&action_type=update&note_content="+$(".noteText").val()+"&is_shipping_note="+is_shipping_note+"&add_time="+$("#datepicker").val()+"&order_id="+$order_id;
             $.ajax({
               type:'get',
               dataType:'json',
               url:'order/sales_order_edit_ajax.php',
               data:data,
               beforeSend:function(){
                 that.addClass('disableBtn').text("正在提交").attr("disabled",true);
               },
               success:function(data){
                 that.removeClass('disableBtn').text("提交").attr("disabled",false);
                 if(data.error_info_.err_no == 0){
                   $("#stateList").html("<li>订单状态:</li>");
                   for(var key in data.status_list_){
                     $("#stateList").append("<li><span>"+data.status_list_[key]+"</span></li>");
                   }
                   if (data.refund_apply_enabled_) {
                     $("#stateList").append("<li><a href='refund_apply_unshipping.php?order_id="+data.order_id_+"' target='_blank'>退款申请</a></li>");
                   }

                   var $actList = $("#actList");
                   $actList.html("");
                   for(var key in data.allowed_action_list_){
                     $actList.append("<li><span id='"+key+"'>"+data.allowed_action_list_[key]+"</span></li>");
                   }
                   
                 }
                 // 可以强制更新
                 else if(data.error_info_.err_no == 5){
                	 if(confirm(data.error_info_.message)) {
                    	 header_action_ajax(that,order_action_id);
                	 }
                 } else {
                	 alert(data.error_info_.message);
                 }
                 $("#actListTab").hide();
